{
  "name": "flick",
  "version": "0.0.1",
  "description": "NestJS API with TypeORM and Clean Architecture",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "check-types": "tsc --noEmit",
    "start": "nest start",
    "start:dev": "nest start --watch --exec 'node --env-file=.env.development'",
    "start:debug": "nest start --debug --watch --exec 'node --env-file=.env.development'",
    "start:prod": "node --env-file=.env.production dist/main",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run .test.",
    "test:e2e": "dotenv -e .env.test --quiet -- vitest run --config vitest.config.e2e.mts",
    "migrate:dev": "dotenv -e .env.development -- ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d ./typeorm.config.ts",
    "migrate:test": "dotenv -e .env.test -- ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d ./typeorm.config.ts",
    "migrate:revert": "dotenv -e .env.development -- ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert -d ./typeorm.config.ts",
    "migrate:generate": "dotenv -e .env.development -- ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -d ./typeorm.config.ts",
    "migrate:create": "dotenv -e .env.development -- ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:create",
    "db:up:dev": "dotenv -e .env.development -- docker-compose -p flick_dev -f docker-compose.yml up --build -d",
    "db:up:test": "dotenv -e .env.test -- docker-compose -p flick_test -f docker-compose.test.yml up --build -d",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prepare": "husky"
  },
  "dependencies": {
    "@fastify/compress": "^8.3.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.2",
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-fastify": "^11.1.9",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/typeorm": "^11.0.0",
    "bcrypt": "^6.0.0",
    "ioredis": "^5.8.2",
    "nestjs-zod": "^5.0.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.28",
    "uuidv7": "^1.1.0",
    "zod": "^4.1.13",
    "zod-error-map": "0.2.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "@faker-js/faker": "^10.1.0",
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.9",
    "@swc/core": "^1.15.3",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^24.10.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "eslightning": "^0.3.8",
    "eslint": "^9.39.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "fastify": "^5.6.2",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "unplugin-swc": "^1.5.9",
    "vitest": "^4.0.15",
    "vitest-tsconfig-paths": "^3.4.1"
  }
}
